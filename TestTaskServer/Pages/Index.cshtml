@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h2>Сообщения</h2>
<button id="btn-show-messages" class="btn btn-primary" onclick="toggleHidden(['msg-container', this.id])">Вывести список сообщений</button>
@*кнопка btn-show-messages выполняет роль print из задания*@
<div id="msg-container" class="hidden">
    @foreach (var message in Model.Messages)
    {
        <div class="msg-item row">
            <h4 class="msg-item-date">@message.ReceiveDate.ToString("dd.MM.yyyy HH:mm:ss")</h4>
            <p class="msg-item-id"><small>Сообщение @(string.IsNullOrWhiteSpace(@message.SenderIp) ? ":" : " от " + @message.SenderIp)</small></p>
            <p class="msg-item-text">@message.Text</p>
        </div>
    }
</div>